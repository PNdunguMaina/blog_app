<% if user_signed_in? %>
	<div class="container"> Welcome <%= current_user.email %> </div> 
  	<div class="container d-flex justify-content-end mb-4"><%= button_to "Log out", destroy_user_session_path, method: :delete, class:"btn btn-danger" %> </div>
<% else %>
	<div class="container d-flex justify-content-end mb-4"><%= button_to "Log in", new_user_session_path, class:"btn btn-success" %> </div>
<% end %>

<ul class="list-group">
	<% @users.each do |user| %>
		<%= link_to "/users/#{user.id}/", class: "user text-decoration-none" do  %>
		<li class="list-group-item">
			<%= render 'shared/user', name: user.Name, photo: user.Photo, postsCount: user.PostsCounter %>
			<div class="d-flex justify-content-end"><%= link_to 'Create Post', posts_new_path, class: "btn btn-success" %></div>
		</li>
	<% end %>
    <% end %>
	
</ul>


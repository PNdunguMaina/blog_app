<form class="mt-4">
<h1 class="container">New Post</h1>
<div class="container">
    <%= form_with model: @post, url: create_post_path do |f| %>
        <div class="form-group">
            <%= f.label :Title, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= f.text_field :Title, class: "form-control" %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :Text, class: "col-sm-2 col-form-label"%>
            <div class="col-sm-10">
            <%= f.text_area :Text, class: "form-control", rows: '5' %>
            </div>
        </div>
        <div class="d-flex justify-content-center mt-5 mb-5">
            <%= f.submit "Add Post",  class: "btn btn-success" %>
        </div>
        <%= link_to 'Back', '/users/', class: "btn btn-success" %>
    <% end %>
</div>
</form>

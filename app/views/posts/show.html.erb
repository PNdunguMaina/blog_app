<div class="container mt-4">
    <div class="border border-dark">
        <h2>Post #<%= @post.id %> by <%= @user.Name %></h2>
        <p class="fs-5 text-secondary justify-content-end d-flex">
        Comments: <%= @post.CommentsCounter %>,
        Likes: <%= @post.LikesCounter %> 
        </p>
        <h3><%= @post.Title %></h3>
        <p><%= @post.Text %><br><p>
    </div>
    <div>
        <% @comments.each_with_index do |comment, idx| %>
            <p>
                Comment <%= idx + 1 %>: <%= comment.Text %>
            </p>
        <% end %>
    </div>
    <div class="container align-items-center">
        <%= link_to "/users/#{@user.id}/posts/", class: "btn btn-primary mt-4" do %>
        Back
        <% end %>
    </div>
     <div class="container col-sm-4">
      <%= form_with model: @comment, url: user_post_path, class: 'form-group', scope: :form_comment  do |form| %>
      	<%= form.text_area :text, class: 'form-control' %>
        <div class="d-flex justify-content-end">
      	    <%= form.submit 'Add comment', class: "btn btn-primary mt-4 mb-3" %>
        </div>
      <% end %>
    </div>
    
</div>

